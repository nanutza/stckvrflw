<h3>Create new question</h3>
  <%= erb :'_errors' %>
  <br>
  <br>
<form action='/questions' method ='post' class="form-horizontal">
  <div class="form-group row">
  <label for='question_title' class="col-sm-1 col-form-label">Title</label>
  <div class="col-sm-11"><input type="text" name ="question[title]" placeholder ="title"></div>
  </div>
  <div class="form-group row">
  <label for="question_text" class="col-sm-1 col-form-label">Text</label>
  <div class="col-sm-11"><textarea type="text" rows="5" columns="20" name="question[text]" placeholder ="enter your question here"></textarea></div>
  </div>
  <div class="form-group row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-4">
      <input type="submit" value ="Submit your question">
    </div>
  </div>
</form>
